{
  "name": "m3-ctf-backend",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "git@bitbucket.org:m3ecommerce/m3-ctf-backend.git",
  "author": "arthur_cardoso_ext <arthur_cardoso_ext@carrefour.com>",
  "license": "MIT",
  "scripts": {
    "dev": "ts-node-dev -r tsconfig-paths/register --respawn --transpile-only --ignore-watch node_modules --no-notify src/server.ts",
    "prepare": "husky install",
    "lint": "eslint . --ext .ts --fix --ignore-pattern node_modules/",
    "style": "prettier --write \"src/**/*.ts\"",
    "pre-commit": "yarn lint && yarn style",
    "migrate": "npx prisma push"
  },
  "dependencies": {
    "@prisma/client": "5.3.1",
    "dotenv": "^16.3.1",
    "express": "^4.18.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.7.1",
    "@commitlint/config-conventional": "^17.7.0",
    "@types/express": "^4.17.17",
    "@typescript-eslint/eslint-plugin": "^6.4.0",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^9.0.0",
    "eslint-config-standard-with-typescript": "^39.0.0",
    "eslint-import-resolver-typescript": "^3.6.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-n": "^15.0.0 || ^16.0.0 ",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-promise": "^6.0.0",
    "husky": "^8.0.0",
    "prettier": "^3.0.3",
    "prisma": "^5.3.1",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "*"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
